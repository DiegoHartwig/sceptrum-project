@using SceptrumProject.Application.DTO
@model IEnumerable<CategoriaDTO>

	@{
	ViewData["Title"] = "Categorias";
}

<style>
	.modal-lg {
		max-width: 85%;
	}
</style>

<div>
	<h2>@ViewData["Title"]</h2>
</div>

<hr />

<div class="row">
	<div class="col-md-12">
		<div>
			<div class="pull-left">
				<a asp-action="Inserir" class="btn btn-primary">
					<span title="Registrar" class="fas fa-plus"></span> Registrar
				</a>
			</div>
		</div>
	</div>
</div>

<br />

<div class="panel panel-default">
	<table class="table table-striped">
		<thead>
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.Descricao)
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Descricao)
					</td>
					<td>
						<a asp-action="Editar" asp-route-id="@item.Id" title="Editar" class="btn btn-warning">
							<span class="fas fa-edit">Editar</span>
						</a>

						<a asp-action="Detalhes" asp-route-id="@item.Id" title="Detalhes" class="btn btn-primary">
							<span class="fas fa-search">Detalhes</span>
						</a>

						<a asp-action="Deletar" asp-route-id="@item.Id" title="Deletar" class="btn btn-danger">
							<span class="fas fa-trash-alt">Deletar</span>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>